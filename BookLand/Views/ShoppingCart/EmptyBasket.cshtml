@{
    ViewData["Title"] = "Your Basket is Empty";
}

<div class="container mt-5 text-center">
    <h1 class="display-4">Your Basket is Empty</h1>
    <p class="lead mt-4">Looks like you haven’t added anything to your basket yet.</p>

    <div class="mt-5">
        <img src="/images/emptybasket.jpg" alt="Empty Basket" class="img-fluid mb-4" style="max-width: 300px;" />
    </div>

    <div class="mt-4">
        <a href="/Books" class="btn btn-primary btn-lg">
            <i class="fas fa-shopping-cart"></i> Start Shopping
        </a>
    </div>

    <div class="mt-4">
        <p class="text-muted">Find something you like from our collection of books.</p>
    </div>
</div>
